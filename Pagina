    <!-- Modal para la visualización de obras en grande -->
    <div id="artworkModal" class="fixed inset-0 bg-black/80 hidden flex items-center justify-center z-50 p-4" onclick="closeArtworkModal()">
        <div class="relative w-full h-full flex flex-col items-center justify-center" onclick="event.stopPropagation()">
            <!-- Botón de cerrar -->
            <button class="absolute top-4 right-4 text-white hover:text-gray-300 text-5xl font-bold leading-none z-50" onclick="closeArtworkModal()">
                &times;
            </button>
            <!-- Imagen en grande -->
            <img id="modalArtworkImage" src="" alt="Obra en grande" class="max-w-full max-h-[85vh] object-contain rounded-md shadow-lg">
            <!-- Descripción de la obra - Posicionada en la parte inferior si es necesario -->
            <p id="modalArtworkDescription" class="text-white text-xl text-center mt-4 p-2 bg-black/50 rounded-md max-w-3xl"></p>
        </div>
    </div>

    <script>
        // Función para abrir el modal de la obra
        function openArtworkModal(element) {
            const fullSrc = element.getAttribute('data-full-src');
            const description = element.getAttribute('data-description');
            
            const modal = document.getElementById('artworkModal');
            const modalImage = document.getElementById('modalArtworkImage');
            const modalDescription = document.getElementById('modalArtworkDescription');

            modalImage.src = fullSrc;
            modalDescription.textContent = description;
            modal.classList.remove('hidden');
            document.body.classList.add('no-scroll'); // Evita el scroll del body
        }

        // Función para cerrar el modal de la obra
        function closeArtworkModal() {
            const modal = document.getElementById('artworkModal');
            modal.classList.add('hidden');
            document.body.classList.remove('no-scroll'); // Habilita el scroll del body
        }
    </script>
</body>
</html>
