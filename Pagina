    <script>
        // Funci√≥n para abrir el modal de la obra
        function openArtworkModal(element) {
            const fullSrc = element.getAttribute('data-full-src');
            const description = element.getAttribute('data-description');
            
            const modal = document.getElementById('artworkModal');
            const modalImage = document.getElementById('modalArtworkImage');
            const modalDescription = document.getElementById('modalArtworkDescription');

            modalImage.src = fullSrc;
            modalDescription.textContent = description;
            modal.classList.remove('hidden');
            document.body.classList.add('no-scroll'); // Evita el scroll del body
        }

        // Funci√≥n para cerrar el modal de la obra
        function closeArtworkModal() {
            const modal = document.getElementById('artworkModal');
            modal.classList.add('hidden');
            document.body.classList.remove('no-scroll'); // Habilita el scroll del body
        }
    </script>
</body>
